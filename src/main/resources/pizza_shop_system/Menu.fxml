<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<StackPane prefHeight="600.0" prefWidth="800.0" styleClass="menu-root" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="pizza_shop_system.gui.MenuController">
    <children>
        <VBox spacing="10.0" alignment="TOP_CENTER" prefWidth="800.0" styleClass="menu-container">
            <!-- Category Selection Buttons -->
            <HBox spacing="20.0" alignment="CENTER" prefHeight="50.0" styleClass="menu-bar">
                <Button fx:id="buttonPizza" text="Pizza" styleClass="menu-button" />
                <Button fx:id="buttonBeverage" text="Beverage" styleClass="menu-button" />
                <Button fx:id="buttonDessert" text="Dessert" styleClass="menu-button" />
            </HBox>

            <!-- Scrollable Menu Items -->
            <ScrollPane fitToWidth="true" fitToHeight="true" vbarPolicy="AS_NEEDED" hbarPolicy="NEVER" styleClass="menu-scroll">
                <GridPane fx:id="menuContainer" styleClass="menu-grid" alignment="CENTER">
                    <!-- Dynamic content populated via MenuController.java -->
                </GridPane>
            </ScrollPane>
        </VBox>
    </children>
</StackPane>