<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
            prefHeight="400.0" prefWidth="600.0"
            xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="pizza_shop_system.gui.LoginController"
            styleClass="login-root">
   <children>
      <Label layoutX="0" layoutY="30.0" prefHeight="40.0" prefWidth="600.0" text="Login"
             styleClass="title-label" alignment="CENTER" />

      <TextField alignment="CENTER" layoutX="175.0" layoutY="120.0" prefWidth="250.0"
                 promptText="Email" fx:id="emailField"
                 onKeyTyped="#handleEmailChanged" styleClass="input-field" />

      <TextField alignment="CENTER" layoutX="175.0" layoutY="170.0" prefWidth="250.0"
                 promptText="Password" fx:id="passwordField"
                 onKeyTyped="#handlePasswordChanged" styleClass="input-field" />

      <Button layoutX="175.0" layoutY="230.0" prefHeight="35.0" prefWidth="250.0"
              text="Login" onAction="#handleLoginClick"
              styleClass="primary-button" />

      <Button fx:id="buttonSignUp" layoutX="175.0" layoutY="290.0" prefHeight="35.0" prefWidth="250.0"
              text="Don't have an account? Click here!"
              textAlignment="CENTER" wrapText="true"
              styleClass="secondary-button" />
   </children>
</AnchorPane>