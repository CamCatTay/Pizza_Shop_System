<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>


<StackPane xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="pizza_shop_system.gui.account.ManageAccountsController">
   <children>
      <AnchorPane prefHeight="600.0" prefWidth="800.0" styleClass="manage-accounts-root">
      
          <!-- Main Container -->
          <children>
            <VBox alignment="TOP_CENTER" layoutX="20.0" layoutY="20.0">
               <children>
                    <!-- Title -->
                    <Label styleClass="manage-accounts-title" text="Manage Accounts" />
            
                    <!-- Scroll Pane -->
                    <ScrollPane prefHeight="500.0" prefWidth="760.0" styleClass="accounts-scroll-pane">
                        <content>
                            <!-- VBox to Display Accounts -->
                            <VBox fx:id="accountsVBox" spacing="10" styleClass="accounts-container" />
                        </content>
                    </ScrollPane>
            
                    <!-- Optional Footer Section -->
                    <HBox alignment="CENTER" prefWidth="760.0" spacing="10" styleClass="manage-footer">
                        <Label fx:id="totalAccountsLabel" styleClass="footer-label" text="Total Accounts: " />
                    </HBox>
               </children>
            </VBox>
          </children>
      </AnchorPane>
   </children>
</StackPane>
