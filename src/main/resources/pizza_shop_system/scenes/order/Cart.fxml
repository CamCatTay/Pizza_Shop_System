<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<StackPane prefHeight="401.0" prefWidth="727.0" styleClass="cart-stackpane" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="pizza_shop_system.gui.order.CartController">
    <children>
        <!-- GridPane to Organize Content -->
        <GridPane alignment="TOP_CENTER" prefHeight="400.0" prefWidth="600.0" styleClass="checkout-grid">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="600.0" />
            </columnConstraints>
            <rowConstraints>
                <!-- Cart Items ScrollPane -->
                <RowConstraints maxHeight="387.0" minHeight="200.0" prefHeight="228.0" vgrow="ALWAYS" />
                <!-- Cart Totals -->
                <RowConstraints minHeight="100.0" prefHeight="100.0" vgrow="NEVER" />
                <!-- Checkout Button Row -->
                <RowConstraints minHeight="50.0" prefHeight="50.0" vgrow="NEVER" />
            </rowConstraints>

            <children>

                <!-- Scrollable Order Items -->
                <ScrollPane fx:id="cartItemsScrollPane" maxWidth="1.7976931348623157E308" prefHeight="200.0" styleClass="order-scroll" GridPane.hgrow="ALWAYS" GridPane.vgrow="SOMETIMES">
                    <content>
                        <VBox fx:id="cartItemsVBox" spacing="10.0" styleClass="order-container">
                     <children>
                        <VBox VBox.vgrow="SOMETIMES">
                           <children>
                              <HBox prefHeight="24.0">
                                 <children>
                                    <Label text="Super long pizza name that does not fit unless this grows" HBox.hgrow="SOMETIMES" />
                                    <Region prefHeight="67.0" prefWidth="200.0" />
                                    <Label layoutX="10.0" layoutY="10.0" text="[Price]" />
                                    <Button mnemonicParsing="false" text="Button" />
                                    <Button mnemonicParsing="false" text="Button" />
                                 </children>
                              </HBox>
                           </children>
                        </VBox>
                     </children></VBox>
                    </content>
                </ScrollPane>

                <!-- Totals Section -->
                <VBox prefWidth="580.0" spacing="10.0" styleClass="totals-container" GridPane.rowIndex="1">
                    <HBox spacing="10.0" styleClass="totals-line">
                        <Label styleClass="cart-label" text="Sub Total:" />
                        <Label fx:id="subTotalLabel" styleClass="cart-value" text="+$16.98" />
                    </HBox>
                    <HBox spacing="10.0" styleClass="totals-line">
                        <Label styleClass="cart-label" text="Tax:" />
                        <Label fx:id="taxLabel" styleClass="cart-value" text="+1.70" />
                    </HBox>
                    <HBox spacing="10.0" styleClass="totals-line">
                        <Label styleClass="cart-label" text="Total:" />
                        <Label fx:id="totalLabel" styleClass="cart-total-value" text="+$18.68" />
                    </HBox>
                </VBox>

                <!-- Checkout Button -->
                <Button fx:id="buttonCheckout" prefHeight="40.0" prefWidth="200.0" styleClass="cart-checkout-button" text="CHECKOUT" GridPane.halignment="CENTER" GridPane.rowIndex="2" />
            </children>
        </GridPane>
    </children>
   <opaqueInsets>
      <Insets />
   </opaqueInsets>
</StackPane>
