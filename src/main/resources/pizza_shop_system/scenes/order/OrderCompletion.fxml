<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>


<StackPane xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="pizza_shop_system.gui.order.OrderCompletionController">
   <children>
      <VBox alignment="TOP_CENTER">
         <children>
      
                          <!-- Confirmation Message -->
              <Label styleClass="order-completion-message" text="Thank you for your order! Here's your receipt:" />
            <ScrollPane>
               <content>
                  <VBox fx:id="receiptContainer" alignment="TOP_CENTER" prefHeight="200.0" />
               </content>
            </ScrollPane>
      
                    <!-- Action Buttons -->
              <HBox alignment="CENTER" spacing="20">
                  <Button fx:id="orderAgainButton" styleClass="action-button" text="Order Again" />
              </HBox>
         </children>
      </VBox>
   </children>
</StackPane>
