<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<StackPane prefHeight="448.0" prefWidth="411.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="pizza_shop_system.gui.authentication.LoginController">
   <children>

      <VBox alignment="CENTER" spacing="20.0">
         <children>
            <ImageView fx:id="logoImage" preserveRatio="true" styleClass="account-logo" />
            <HBox alignment="CENTER">
               <children>
                  <TextField fx:id="emailField" alignment="CENTER" prefWidth="300.0" promptText="Email" styleClass="input-field" />
               </children>
            </HBox>
            <HBox alignment="CENTER">
               <children>
                  <StackPane alignment="CENTER_RIGHT" prefWidth="300.0">
                     <children>
                        <PasswordField fx:id="passwordField" alignment="CENTER" prefWidth="300.0" promptText="Password" />
                        <Button fx:id="togglePasswordButton" alignment="CENTER" prefHeight="30.0" prefWidth="30.0" styleClass="login-eye-button" text="👁" />
                        <TextField fx:id="visiblePasswordField" alignment="CENTER" translateZ="-1.0" visible="false" />
                     </children>
                  </StackPane>
               </children>
            </HBox>
            <HBox alignment="CENTER">
               <children>
                  <Button fx:id="loginButton" prefHeight="35.0" prefWidth="250.0" styleClass="home-login-button" text="LOGIN" />
               </children>
            </HBox>
            <HBox alignment="CENTER">
               <children>
                  <Button fx:id="signupButton" prefHeight="35.0" prefWidth="250.0" styleClass="sign-up-button" text="Don't have an account? Click here!" textAlignment="CENTER" wrapText="true" />
               </children>
            </HBox>
            <VBox fx:id="resultsContainer" prefHeight="29.0" prefWidth="411.0" />
         </children>
      </VBox>
   </children>
</StackPane>
