<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Button?>

<GridPane xmlns="http://javafx.com/javafx"
          xmlns:fx="http://javafx.com/fxml"
          fx:controller="pizza_shop_system.gui.CheckoutController"
          styleClass="checkout-root"
          alignment="CENTER" hgap="15" vgap="15" prefHeight="400.0" prefWidth="600.0">

    <!-- Title -->
    <Label text="Checkout" GridPane.columnIndex="0" GridPane.rowIndex="0" GridPane.columnSpan="2"
           styleClass="checkout-title"/>

    <!-- Total Amount -->
    <Label text="Total:" GridPane.columnIndex="0" GridPane.rowIndex="1" styleClass="checkout-label"/>
    <Label fx:id="totalLabel" GridPane.columnIndex="1" GridPane.rowIndex="1" styleClass="checkout-value"/>

    <!-- Payment Method -->
    <Label text="Payment Method:" GridPane.columnIndex="0" GridPane.rowIndex="2" styleClass="checkout-label"/>
    <ComboBox fx:id="paymentMethodComboBox" GridPane.columnIndex="1" GridPane.rowIndex="2"
              promptText="Select Payment Method" styleClass="checkout-combo-box"/>

    <!-- Card Credentials -->
    <Label fx:id="cardNumberLabel" text="Card Number:" GridPane.columnIndex="0" GridPane.rowIndex="3" visible="false"
           styleClass="checkout-label"/>
    <TextField fx:id="cardNumberField" GridPane.columnIndex="1" GridPane.rowIndex="3" visible="false"
               promptText="Enter Card Number" styleClass="checkout-textfield"/>

    <Label fx:id="cvvLabel" text="CVV:" GridPane.columnIndex="0" GridPane.rowIndex="4" visible="false"
           styleClass="checkout-label"/>
    <TextField fx:id="cvvField" GridPane.columnIndex="1" GridPane.rowIndex="4" visible="false"
               promptText="Enter CVV" styleClass="checkout-textfield"/>

    <Label fx:id="expirationLabel" text="Expiration Date (MM/YY):" GridPane.columnIndex="0" GridPane.rowIndex="5" visible="false"
           styleClass="checkout-label"/>
    <TextField fx:id="expirationDateField" GridPane.columnIndex="1" GridPane.rowIndex="5" visible="false"
               promptText="MM/YY" styleClass="checkout-textfield"/>

    <!-- Check Payment -->
    <Label fx:id="checkNumberLabel" text="Check Number:" GridPane.columnIndex="0" GridPane.rowIndex="6" visible="false"
           styleClass="checkout-label"/>
    <TextField fx:id="checkNumberField" GridPane.columnIndex="1" GridPane.rowIndex="6" visible="false"
               promptText="Enter Check Number" styleClass="checkout-textfield"/>

    <!-- Confirm Button -->
    <Button text="Confirm Order" fx:id="confirmButton" GridPane.columnIndex="0" GridPane.rowIndex="7"
            GridPane.columnSpan="2" styleClass="checkout-button"/>
</GridPane>