<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<AnchorPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
            prefHeight="800.0" prefWidth="600.0"
            xmlns="http://javafx.com/javafx/17.0.12"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="pizza_shop_system.gui.ReportsController"
            styleClass="reports-root">

   <!-- Logo and Header Section -->
   <children>
      <VBox alignment="CENTER" spacing="10" prefWidth="600.0" styleClass="header-container">
         <ImageView fx:id="logoImageView" fitHeight="80.0" fitWidth="80.0" preserveRatio="true" />
         <Label text="Report Generator" styleClass="header-title" />
      </VBox>

      <!-- Main Body Section -->
      <VBox layoutX="50.0" layoutY="150.0" spacing="15" styleClass="main-content">
         <!-- Report Type Selection -->
         <Label text="Select Report Type:" styleClass="label" />
         <ChoiceBox fx:id="timeSelectionChoiceBox" prefWidth="200.0" />

         <!-- Date Picker for Weekly Option -->
         <Label fx:id="weeklyStartDateLabel" text="Pick the start date of the week:" visible="false" styleClass="label" />
         <DatePicker fx:id="datePicker" visible="false" />

         <!-- Generate Button -->
         <Button fx:id="generateButton" text="Generate Report" disable="true" styleClass="button-primary" />

         <!-- Report TextArea (For Displaying Reports) -->
         <TextArea fx:id="reportTextArea" editable="false" wrapText="true" prefHeight="300.0" prefWidth="480.0" visible="false" styleClass="report-display"/>
      </VBox>

      <!-- Back Button -->
      <Button fx:id="backButton" layoutX="250.0" layoutY="700.0" text="BACK" styleClass="button-secondary" />
   </children>
</AnchorPane>