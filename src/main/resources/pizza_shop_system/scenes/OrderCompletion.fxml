<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="pizza_shop_system.gui.OrderCompletionController"
            prefHeight="500.0" prefWidth="600.0"
            styleClass="order-completion-root">

    <children>
        <!-- Title -->
        <Label layoutX="200.0" layoutY="20.0" text="Order Completion" styleClass="order-completion-title"/>

        <!-- Confirmation Message -->
        <Label layoutX="70.0" layoutY="60.0" text="Thank you for your order! Below are the details:" styleClass="order-completion-message" />

        <!-- Receipt Display -->
        <TextArea fx:id="receiptTextArea"
                  layoutX="50.0" layoutY="100.0" prefWidth="500.0" prefHeight="300.0"
                  editable="false" wrapText="true" styleClass="receipt-display"/>

        <!-- Action Buttons -->
        <HBox layoutX="150.0" layoutY="420.0" spacing="20" alignment="CENTER">
            <Button fx:id="orderAgainButton" text="Order Again" styleClass="action-button"/>
            <Button fx:id="exitButton" text="Exit" styleClass="action-button-secondary"/>
        </HBox>
    </children>
</AnchorPane>